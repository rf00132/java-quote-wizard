{{# partial "deleteWarning"}}
    <div class="delete">
        <h3>Are you sure you wish to delete this product?</h3>

        <form method="post" action="/products-delete-confirm">
            <button class="btn-confirm" type="submit"><i class="fas fa-check"></i></button>
        </form>
        <form method="post" action="/products-delete-deny">
            <button class="btn-deny" type="submit"><i class="fas fa-times"></i></button>
        </form>
    </div>
{{/partial}}

