{{# partial "title"}}{{this.selectedProduct.name}}{{/partial}}

{{# partial "content"}}
    <div class="products">
        <h1>{{ this.selectedProduct.name }}</h1>
        <div class="card-container">
            <div class="card">
                <div>
                </div>
                <div class="card-detail">
                    <h3>Total: </h3>
                    <h3>£{{ this.selectedProduct.productPrice }}</h3>
                </div>
                <div class="card-detail">
                    <h3>VAT Rate: </h3>
                    <h3>{{ this.selectedProduct.vatRate }}%</h3>
                </div>
                <div class="card-detail">
                    <h3>Grand Total: </h3>
                    <h3>£{{ this.selectedProduct.grandTotal }}</h3>
                </div>

                <a href="/products-update" id="editItem" ><span class="btn-edit-card"><i class="fas fa-pen"></i></span></a>
            </div>
        </div>

    </div>
{{/partial}}

{{# partial "footer"}}

{{/partial}}

