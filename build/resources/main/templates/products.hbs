{{# partial "content"}}
    <div class="products">
        <h1>Current Products</h1>

        <div class="card-container">
            <!--TODO: add foreach loop to display all items-->
            {{#each products}}
            <div class="card">
                <h3>{{ productName }}</h3>
                <div>
                    <div>
                        <!-- TODO: add image display for product -->
                    </div>
                    <div>
                        <div class="card-detail">
                            <p>Total: </p>
                            <p id="productTotalDisplay">£{{ productPrice }}</p>
                        </div>
                        <div class="card-detail">
                            <p>VAT: </p>
                            <p id="productVatDisplay">£{{ vatCost }}</p>
                        </div>
                        <div class="card-detail">
                            <p>Total + VAT: </p>
                            <p id="productTotalVatDisplay">£{{ grandTotal }}</p>
                        </div>
                        <span class="btn-add-card"><i class="fas fa-plus"></i></span>
                        <span class="btn-edit-card"><i class="fas fa-pen"></i></span>
                    </div>
                </div>
            {{/each}}
            </div>
        </div>
        <a class="btn-add" href="/products-add"><i class="fas fa-plus"></i></a>
    </div>
{{/partial}}

{{> base.hbs}}