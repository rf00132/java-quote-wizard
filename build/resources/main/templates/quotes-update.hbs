{{# partial "content"}}
    <div class="quotes">
        <!-- TODO: add data input  -->
        <h1>Quote Name Goes Here</h1>
        <div class="card-container">
            <div class="card">

                <div class="card-detail">
                    <h3>Grand Total: </h3>
                    <h3>£10</h3>
                </div>
                <div class="card-detail">
                    <h3>With VAT: </h3>
                    <h3>£12</h3>
                </div>
                <div class="card-detail">
                    <h3>Total Num. of Items: </h3>
                    <h3>2</h3>
                </div>
                <span class="btn-edit-card"><i class="fas fa-pen"></i></span>

            </div>

            <div class="update">
                <div class="card-detail">
                    <label for="QuoteNameInput">Update Name:</label>
                    <input id="QuoteNameInput">
                </div>
                <div class="card-detail">
                    <label for="QuoteCostInput">Update Contact:</label>
                    <input id="QuoteCostInput">
                </div>

                <button>UPDATE</button>
            </div>

            <!-- TODO: iterate through loop to display evey product in the quote -->
            {{#each selected-basket}}
                <div class="card">
                    <h3>{{ product.productName}}</h3>
                    <div>
                        <div>
                            <!-- TODO: add image display for product -->
                        </div>
                        <div>
                            <div class="card-detail">
                                <h3>Total Num. of Items: </h3>
                                <h3>{{ productAmount }}</h3>
                            </div>
                            <div class="card-detail">
                                <p>Total: </p>
                                <p id="productTotalDisplay">{{ productTotal }}</p>
                            </div>
                            <div class="card-detail">
                                <p>Total + VAT: </p>
                                <p id="productTotalVatDisplay">{{ productTotalVat }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="card-detail">
                        <div class="btn-increment">
                            <button><i class="fas fa-minus"></i></button>
                            <p>2</p>
                            <button><i class="fas fa-plus"></i></button>
                        </div>
                    </div>
                </div>
            {{/each}}


        </div>
        <!-- TODO: add click listener to button to open up option pop up to select a product to add -->
        <a class="btn-add" href="/quotes-add"><i class="fas fa-plus"></i></a>
    </div>
{{/partial}}

{{> base.hbs}}